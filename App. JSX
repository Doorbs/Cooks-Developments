// --- Sub Components ---

const StatCard = ({ icon, value, label, desc }) => (
  <div className="bg-white p-8 rounded-2xl shadow-xl border-t-4 border-yellow-500 transform hover:-translate-y-1 transition-transform">
    <div className="mb-4 bg-yellow-50 w-16 h-16 rounded-full flex items-center justify-center">
